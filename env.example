# =============================================================================
# AICyberShield Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=AICyberShield
NEXT_PUBLIC_APP_DESCRIPTION=AI-Powered Cybersecurity Automation Platform

# =============================================================================
# Authentication & Security
# =============================================================================
# NextAuth.js Configuration
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=30d

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL (Recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/aicybersecurity

# Alternative: SQLite (for development)
# DATABASE_URL=file:./dev.db

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# =============================================================================
# Email Services
# =============================================================================
# Resend (Recommended)
RESEND_API_KEY=re_your_resend_api_key_here

# Alternative: SendGrid
# SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Alternative: SMTP (Gmail, Outlook, etc.)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@aicybersecurity.com

# Email Configuration
EMAIL_FROM=noreply@aicybersecurity.com
EMAIL_FROM_NAME=AICyberShield
EMAIL_VERIFICATION_EXPIRES=24h
PASSWORD_RESET_EXPIRES=1h

# =============================================================================
# Cloud Storage (R2/S3)
# =============================================================================
# Cloudflare R2 (S3-compatible)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_REGION=auto
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=ai-cybersecurity-scans
R2_PUBLIC_URL=https://your-bucket.your-subdomain.com

# Alternative: AWS S3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=ai-cybersecurity-scans

# =============================================================================
# Azure Container Instance
# =============================================================================
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_CONTAINER_GROUP_NAME=ai-security-scanner
AZURE_CONTAINER_NAME=security-scanner
AZURE_CONTAINER_IMAGE=your-registry.azurecr.io/security-scanner:latest
AZURE_CPU=1
AZURE_MEMORY=1.5
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# =============================================================================
# AI/LLM Services
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Alternative: Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Alternative: Local LLM (Ollama)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# =============================================================================
# Security & CORS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
EXTENSION_SECRET=your-extension-secret-key-minimum-32-characters

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# Monitoring & Analytics
# =============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn-here

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# =============================================================================
# Development & Testing
# =============================================================================
# Test Database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/aicybersecurity_test

# Mock Services (for development)
MOCK_EMAIL_SERVICE=false
MOCK_AI_SERVICE=false

# Debug Mode
DEBUG=false
LOG_LEVEL=info

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_2FA=false
ENABLE_AUDIT_LOGS=true

# =============================================================================
# API Keys & External Services
# =============================================================================
# VirusTotal API (for file scanning)
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# Shodan API (for reconnaissance)
SHODAN_API_KEY=your-shodan-api-key

# Censys API (for network scanning)
CENSYS_API_ID=your-censys-api-id
CENSYS_API_SECRET=your-censys-api-secret

# =============================================================================
# Kubernetes Configuration (for production)
# =============================================================================
KUBERNETES_NAMESPACE=aicybersecurity
KUBERNETES_CLUSTER_NAME=production-cluster
KUBERNETES_SERVICE_ACCOUNT=aicybersecurity-sa

# =============================================================================
# Backup & Recovery
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups 